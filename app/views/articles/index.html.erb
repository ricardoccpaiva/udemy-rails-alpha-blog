<div class="blog-post">
  <% @articles.order("created_at desc").each do |article| %>
      <h2 class="blog-post-title"><%= link_to article.title, article_path(article) %></h2>
      <p class="blog-post-meta"><%= article.created_at %></p>
      <p>
        <%= article.description %>
      </p>
      <p>
        <small> Created by <%= article.user.email if article.user %>,
          <%= time_ago_in_words(article.created_at) %> ago
        </small>
      </p>
      <table>
        <tr>
          <td>
            <span style="display: none" class="glyphicon glyphicon-pencil" aria-hidden=true></span>
            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-xs btn-success' %>
            <%= link_to 'Delete', article_path(article), class: 'btn btn-xs btn-danger', method: :delete, data: {confirm: "Are you sure?"} %>
          </td>
        </tr>
      </table>
      <br/>
  <% end %>