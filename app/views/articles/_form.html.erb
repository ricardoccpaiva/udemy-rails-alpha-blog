<% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
      <% end %>
    </ul>
<% end %>

<%= form_for @article do |a| %>
    <div class="form-group">
      <%= a.label :title %>
      <%= a.text_field :title, class:"form-control", placeholder:"Title", autofocus:true %>
    </div>
    <div class="form-group">
      <%= a.label :description %>
      <%= a.text_field :description, class:"form-control", placeholder:"Title", autofocus:true %>
    </div>
      <%= a.submit class:"btn btn-default" %>
<% end %>