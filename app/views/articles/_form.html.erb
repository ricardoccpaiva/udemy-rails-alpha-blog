
<% if @article.errors.any? %>
<div class="alert alert-danger alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
        <% end %>
      </ul>
</div>
<% end %>

<%= form_for @article do |a| %>
    <div class="form-group">
      <%= a.label :title %>
      <%= a.text_field :title, class:"form-control", placeholder:"Title", autofocus:true %>
    </div>
    <div class="form-group">
      <%= a.label :description %>
      <%= a.text_area :description, class:"form-control input-lg", placeholder:"Title", autofocus:true %>
    </div>
    
    <%= link_to 'Back', articles_path, class: "btn btn-danger" %>
    <%= a.submit class:"btn btn-success" %>
<% end %>